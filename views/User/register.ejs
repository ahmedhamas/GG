<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/login.css" />
  </head>
  <body>
    <a href="/user/info/login" class="Back"
      ><i class="bx bx-left-arrow-alt"></i
    ></a>
    <div class="container">
      <form dir="rtl" id="myForm">
        <img src="/img/logo.png" />
        <div class="input">
          <label>الاسم:</label>
          <input type="text" required name="name" />
        </div>
        <div class="input">
          <label>بريد إلكتروني:</label>
          <input type="email" required name="email" />
        </div>
        <div class="input">
          <label>كلمة المرور:</label>
          <input id="pass" type="password" required name="password" />
        </div>
        <div class="input">
          <label>تأكيد كلمة المرور:</label>
          <input id="pass2" type="password" required name="password2" />
        </div>
        <div class="input">
          <button>تسجيل الدخول</button>
        </div>
        <p id="err"></p>
        <p>لديك حساب ؟ قم ب<a href="/user/info/register">تسجيل الدخول</a></p>
      </form>
    </div>
    <script>
      const myForm = document.getElementById("myForm");
      const message = document.getElementById("err");

      myForm.addEventListener("submit", function (e) {
        e.preventDefault();

        const formData = new FormData(this);
        const searchParams = new URLSearchParams();

        for (const pair of formData) {
          searchParams.append(pair[0], pair[1]);
        }

        fetch("http://localhost:3000/register", {
          method: "post",
          body: searchParams,
        })
          .then((res) => res.json())
          .then((res) => {
            if (res.success == 0) {
              message.style.color = "#fff";
              message.style.background = "red";
              message.style.fontSize = "12px";
              message.style.padding = " 0 2.5px";
              message.style.borderRadius = "50px";
              message.innerHTML = res.message;
            } else {
              location.replace("/");
            }
          })
          .catch(function (error) {
            console.error(error);
          });
      });
    </script>
  </body>
</html>

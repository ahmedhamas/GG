<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Category</title>
    <link rel="stylesheet" href="/css/admin/category.css" />
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="catecontainer">
        <% subcategory.forEach(subcategory => { %>
        <div class="category">
          <form action="/delete/subcategory" method="post" id="delete">
            <input
              type="hidden"
              name="subcategoryid"
              value="<%= subcategory.id %>"
            />
            <button type="submit"><i class="bx bx-trash"></i></button>
          </form>
          <p>معرف:<%= subcategory.id %></p>
          <p>قسم:<%= subcategory.category %></p>
          <p>الاسم: <%= subcategory.name_ar %></p>
          <p>مسار الصورة :<%= subcategory.image %></p>
          <img src="<%= subcategory.image %>" />
        </div>
        <form action="/edit/subcategory" method="post" id="editform">
          <input
            type="hidden"
            name="subcategoryid"
            value="<%= subcategory.id %>"
          />
          <select name="category">
            <option disabled selected value="<%= subcategory.category %>">
              <%= subcategory.category %>
            </option>
            <% category.forEach(name => { %>
            <option value="<%=name.name_ar%>"><%=name.name_ar%></option>
            <% }) %>
          </select>
          <input type="text" name="name" value="<%= subcategory.name_ar %>" />
          <input type="text" name="image" value="<%= subcategory.image %>" />
          <button type="submit">تغير</button>
        </form>
        <% }) %>
      </div>
      <form
        style="margin-top: 25px"
        action="/add/subcategory"
        method="post"
        id="editform"
      >
        <select name="category">
          <% category.forEach(name => { %>
          <option value="<%=name.name_ar%>"><%=name.name_ar%></option>
          <% }) %>
        </select>
        <input type="text" name="name_ar" />
        <input type="text" name="image" placeholder="image url" />
        <button><i class="bx bx-folder-plus"></i></button>
      </form>
    </div>
    <script>
      window.addEventListener("pageshow", function (event) {
        var historyTraversal =
          event.persisted ||
          (typeof window.performance != "undefined" &&
            window.performance.navigation.type === 2);
        if (historyTraversal) {
          // Handle page restore.
          window.location.reload();
        }
      });
    </script>
  </body>
</html>

<nav
  style="
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
    padding: 0 5px;
    background: #fff;
    direction: rtl;
  "
>
  <div
    class="icons"
    style="
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    "
  >
    <button
      id="menu"
      style="
        background: none;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: auto;
      "
    >
      <i class="bx bx-menu" style="font-size: 30px"></i>
    </button>
    <form
      action="/product/search"
      method="post"
      style="
        position: relative;
        width: 70%;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <input
        type="search"
        name="search"
        style="
          width: 100%;
          border-radius: 50px;
          border: none;
          background: #eee;
          padding: 0 5px;
          height: 30px;
          direction: rtl;
        "
      />
      <button
        type="submit"
        style="
          position: absolute;
          left: 0%;
          background: red;
          width: 50px;
          height: 30px;
          border-radius: 50px 0 0 50px;
          cursor: pointer;
          border: none;
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 25px;
          color: #fff;
        "
      >
        <i class="bx bx-search"></i>
      </button>
    </form>
    <a
      style="
        color: #333;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        margin-right: auto;
      "
      href="/cart/show/items"
      ><i style="font-size: 30px" class="bx bxs-cart-alt"></i>
      <span id="cartLength"></span>
    </a>
  </div>
  <ul
    id="menuBar"
    style="
      position: absolute;
      top: 55px;
      right: 5px;
      transform: translateX(105%);
      transition: 0.3s;
      background: #333;
      width: 200px;
      border-radius: 5px;
      padding: 5px;
      z-index: 999;
    "
  >
    <li
      style="
        margin: 15px 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <a href="/" style="color: #fff; text-decoration: none">الصفحة الرئيسية</a>
    </li>
    <% if (auth) { %>
    <li
      style="
        margin: 15px 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <a href="/user/oh" style="color: #fff; text-decoration: none"
        >تاريخ الطلب</a
      >
    </li>
    <% } %>
    <li
      style="
        margin: 15px 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <a href="/contact_us" style="color: #fff; text-decoration: none"
        >اتصل بنا</a
      >
    </li>
    <li
      style="
        margin: 15px 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <a href="/about" style="color: #fff; text-decoration: none"
        >معلومات عنا</a
      >
    </li>
    <li
      style="
        margin: 15px 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <% if (auth) { %>
      <a href="/user/info/logout" style="color: #fff; text-decoration: none"
        >تسجيل الخروج</a
      >

      <% } else { %>
      <a href="/user/info/login" style="color: #fff; text-decoration: none"
        >تسجيل الدخول</a
      >
      <% } %>
    </li>
    <% if (admin) { %>
    <li
      style="
        margin: 15px 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <a href="/about" style="color: #fff; text-decoration: none"
        >صفحة الإدارة</a
      >
    </li>
    <% } %>

    <li
      style="
        margin: 15px 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <a href="/"><img src="/img/logo.png" style="width: 100%" /></a>
    </li>
  </ul>
</nav>

<script src="/js/nav.js"></script>
